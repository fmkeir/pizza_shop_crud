<form method="post" action="/pizza_orders/<%=@order.id%>">
    <label for="first_name">First Name:</label>
      <input id="first_name" type="text" name="first_name" value="<%= @order.first_name %>"/> <br/>
    <label for="last_name">Last Name:</label>
      <input id="last_name" type="text" name="last_name" value="<%= @order.last_name %>"/> <br/>
    <label for="pizza_select">Select a pizza:</label>
      <select id="pizza_select" name="topping" selected="<%= @order.topping %>">
        <option><%= @order.topping %></option>
        <option value="Margherita">Margherita</option>
        <option value="Calzone">Calzone</option>
        <option value="Italian Sausage">Italian Sausage</option>
        <option value="Pepperoni">Pepperoni</option>
      </select> <br/>
    <label for="quantity">Quantity:</label>
      <input id="quantity" type="number" name="quantity" value="<%= @order.quantity %>"/>  <br/>

    <input type="submit" value="Confirm changes"/>
</form>
